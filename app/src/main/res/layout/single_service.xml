<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_rect_f_white_s_black"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_requestId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request ID-34343"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <TextView
            android:id="@+id/tv_serviceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="23-10-2016"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheel Change"/>
        <TextView
            android:id="@+id/tv_servicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="$34"/>
    </RelativeLayout>
</LinearLayout>